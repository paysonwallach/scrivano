{
  "name": "scrivano",
  "version": "0.1.0",
  "description": "A meta-build system to keep your project in sync.",
  "license": "GPL-3.0",
  "author": "Payson Wallach <payson@paysonwallach.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/paysonwallach/scrivano"
  },
  "bugs": {
    "url": "https://github.com/paysonwallach/scrivano/issues"
  },
  "bin": "bin/cli.js",
  "scripts": {
    "format": "run-p format:*",
    "format:js": "eslint .",
    "format:package.json": "prettier-package-json --write",
    "prerelease": "node bin/cli.js",
    "release": "standard-version"
  },
  "dependencies": {
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.2",
    "@commitlint/config-conventional": "^12.1.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "prettier-package-json": "^2.5.0",
    "standard-version": "^9.3.0"
  },
  "keywords": [
    "build",
    "meta",
    "system",
    "template"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format"
    }
  },
  "meta": {
    "name": "Scrivano",
    "repository": {
      "owner": "paysonwallach",
      "name": "scrivano"
    },
    "license": {
      "name": "GNU General Public License v3.0",
      "url": "https://github.com/paysonwallach/scrivano/blob/master/LICENSE"
    }
  },
  "standard-version": {
    "scripts": {
      "precommit": "npm run prerelease"
    }
  }
}
